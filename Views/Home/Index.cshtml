
@{
    ViewData["Title"] = "Login";
}
@model LoginUser

<div class="container" style="margin-top: 10rem;">
 <div class="mx-auto" style="width: 23rem;">
        <div class="border border-success mb-3" style="max-width: 23rem;">
        <div class="text-center">
            <h5 class="card-header bg-dark text-white">Login:</h5>
        </div>
        <div class="card-body text-white bg-dark ">
                <form asp-action="Login" asp-controller="Home" method="post">
                <div class="row">
                    <div class="col-4">
                        <label class="form-group mt-3" asp-for="LoginEmail">Email:</label>
                    </div>
                    <div class="col-7">
                        <input type="email" class="form-control" asp-for="LoginEmail">
                        <span asp-validation-for="LoginEmail" class="text-danger"></span>
                    </div>
                     
                </div>

                <div class="row">
                    <div class="col-4">
                        <label class="form-group mt-3" asp-for="LoginPassword">Password:</label>
                    </div>
                    <div class="col-7">
                        <input type="password" class="form-control" asp-for="LoginPassword">
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>
                </div>
           
                <div class="text-center">
                    <button type="submit" class="btn btn-success border-dark mb-3">Login</button>
                </div>
            </form>

            <div class="text-center">
                    Don't have an account? <a href="/registration" class="text-success">Sign Up for Free</a>
            </div>
        </div>
    </div>
    </div>

       
  